@page
@model AspNetAuth.Pages.OnlyUniUpoModel
@{
}

<h1>
    Accessible only to @@uniupo.it users
</h1>

<p>
    <strong>UserName:</strong> @User.Identity?.Name
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Value
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>
                    @claim.Type
                </td>
                <td>
                    @claim.Value
                </td>
            </tr>
        }
    </tbody>
</table>